<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_action_sun"
        android:hint="10°"
        android:padding="15dp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/weather_temp"
        android:hint="Cloudy"
        android:padding="15dp"
        android:textSize="16sp"
        android:layout_toStartOf="@+id/weather_temp"
        android:layout_alignEnd="@+id/weather_temp"
        android:minWidth="150dp" />


    <TextView
        android:id="@+id/weather_high"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/weather_description"
        android:layout_below="@+id/weather_temp"
        android:hint="18°"
        android:padding="15dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/weather_low"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/weather_description"
        android:layout_below="@id/weather_high"
        android:hint="4°"
        android:padding="15dp"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/weather_date"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="04/07/2015"
        android:padding="15dp"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/weather_description"
        android:layout_alignStart="@+id/weather_description" />

</RelativeLayout>